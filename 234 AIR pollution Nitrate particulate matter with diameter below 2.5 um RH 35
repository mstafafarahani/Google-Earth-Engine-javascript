// Area Chart for Nitrate_particulate_matter25  Levels Over Time
var areaChart = ui.Chart.image.series({
  imageCollection: airpollutionNitrate_particulate_matter25 ,
  region: country,
  reducer: ee.Reducer.mean(), 
  scale: 27750,
  xProperty: 'system:time_start' 
}).setChartType('AreaChart')
  .setOptions({
    title: 'Area Chart of Nitrate_particulate_matter25  Levels Over Time',
