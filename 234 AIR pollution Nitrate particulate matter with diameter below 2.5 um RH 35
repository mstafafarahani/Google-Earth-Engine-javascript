var geometry = 
    /* color: #d63000 */
    /* shown: false */
    ee.Geometry.Point([51.60688504203525, 33.307130310065396]);

/*YOu CAN USE city boundary  ,
var city = ee.FeatureCollection("WM/geoLab/geoBoundaries/600/ADM2").filterBounds(geometry)
Map.addLayer(city)
Map.centerObject(geometry,8)

YOu CAN USE province boundary 
var provinceORstate = ee.FeatureCollection("FAO/GAUL_SIMPLIFIED_500m/2015/level1").filterBounds(geometry) 
//boundary province/state
Map.addLayer(province)
*/

//YOu CAN USE country boundary 
var country = ee.FeatureCollection("FAO/GAUL/2015/level0").filterBounds(geometry);
Map.addLayer(country); // Add the country boundary to the map
Map.centerObject(geometry,7)







// AIR POLLUTION    unit:	ug m-3   	Nitrate_particulate_matter25 with diameter below 2.5 um RH 35
// Nitrate_particulate_matter25      I MULTIPLY IN  (1) TO AVOID TO GET ZERO VALUE IN CSV FILE

var airpollutionNitrate_particulate_matter25      = ee.ImageCollection("NASA/GEOS-CF/v1/rpl/tavg1hr")
.select('PM25ni_RH35_GCC').filterBounds(country).filterDate('2024-11-01','2024-12-12')
var airpollutionNitrate_particulate_matter25      = airpollutionNitrate_particulate_matter25 .map(function(img){   //2018-01-01â€“2025-03-26
  return img.clip(country).multiply(1).subtract(0).add(0).divide(1).copyProperties(img, ['system:time_start'])})
Map.addLayer(airpollutionNitrate_particulate_matter25 .mean(),{min: 0.032713303714990614 , max: 0.06468137875199317,
palette:['fffdb3', 'f7ff8a', 'ffe03b', 'f3e62a', 'ca3eeb', 'a429d5', 'e90000']},'airpollutionNitrate_particulate_matter25 ')








print("number of image for this satellite type_of_geometry date and type_of_index"
,airpollutionNitrate_particulate_matter25 .size())










/// Create a time series chart showing airpollutionNitrate_particulate_matter25  growth
print(ui.Chart.image.series({
  imageCollection: airpollutionNitrate_particulate_matter25     ,
  region: country,
  reducer: ee.Reducer.mean(),scale: 27750  ,
  xProperty: 'system:time_start'
}).setSeriesNames(['airpollutionNitrate_particulate_matter25   Growth '])
.setOptions({title: 'airpollutionNitrate_particulate_matter25   Growth',
  hAxis: {title: 'Year'},vAxis: {title: '(unit)'},
  interpolateNulls: true,lineWidth: 1,pointSize: 2,
  curveType: 'function'}));
  





// Bar Chart for Monthly Comparison )
var monthlyChart = ui.Chart.image.seriesByRegion({
  imageCollection: airpollutionNitrate_particulate_matter25 ,
  regions: country,
  reducer: ee.Reducer.mean(), 
  scale: 27750,
  xProperty: 'system:time_start' 
}).setChartType('ColumnChart')
/*  .setOptions({
