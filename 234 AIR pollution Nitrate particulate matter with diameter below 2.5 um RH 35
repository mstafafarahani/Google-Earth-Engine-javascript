    legend: {position: 'none'},
    colors: ['#ff7835'] 
  });
*/
print(monthlyChart);

  
  // Scatter Chart
var scatterChart = ui.Chart.image.series({
  imageCollection: airpollutionNitrate_particulate_matter25 ,
